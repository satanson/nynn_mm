#include<nynn_mm_config.hpp>
#include<nynn_mm_edgemanip.hpp>
typedef edge_manip_t<Edge> EdgeManip;
int main(int argc,char** argv){
	string basedir=argv[1];
	uint32_t vtxno=parse_int(argv[2],0);
	uint32_t blkno=parse_int(argv[3],~0);
	uint32_t size=parse_int(argv[4],0);
	string act=argv[5];

	SubgraphSet sgs(basedir);
	EdgeManip edgemanip(sgs);
	if (act=="pop")edgemanip.pop_edges_until(vtxno,blkno,size);
	else if (act=="shift")edgemanip.shift_edges_until(vtxno.blkno,size);
	else {
		cout<<"you should choose [shift|pop]"<<endl;
	}
}
